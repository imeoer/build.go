{
    "variable": {
        "inkgo": "/home/imeoer/PROJECT/ink.go/",
        "bamboo": "/home/imeoer/PROJECT/bamboo-web"
    },
    "task": {
        "default": [
            "${#build_ink}",
            "${#build_front}",
            "sudo atom ${inkgo}",
            "sudo atom ${bamboo}"
        ],
        "build_ink": [
            "go install ink",
            "${build_bamboo}"
        ],
        "build_bamboo": [
            "go install bamboo",
            "${build_main}"
        ],
        "build_main": [
            "go build -o ${inkgo}main ${inkgo}src/main.go",
            "pkill -9 main || true",
            "${inkgo}main || true"
        ],
        "build_front": [
            "gulp --cwd ${bamboo}"
        ],
        "low": [
            "xrandr --output eDP1 --mode 1360x768"
        ],
        "high": [
            "xrandr --output eDP1 --mode 1920x1080"
        ]
    },
    "watch": {
        "${inkgo}src/ink/*.go": "${build_ink}",
        "${inkgo}src/bamboo/*.go": "${build_bamboo}",
        "${inkgo}src/main.go": "${build_main}"
    }
}
