{
    "variable": {
        "directory": "/home/imeoer/PROJECT/ink.go/"
    },
    "task": {
        "build_ink": ["go install ink", "${build_bamboo}"],
        "build_bamboo": ["go install bamboo", "${build_main}"],
        "build_main": ["go build -o ${directory}main ${directory}src/main.go", "pkill main;${directory}main"]
    },
    "watch": {
        "${directory}src/ink/*.go": "${build_ink}",
        "${directory}src/bamboo/*.go": "${build_bamboo}",
        "${directory}src/main.go": "${build_main}"
    }
}
